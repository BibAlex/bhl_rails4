.panel.panel-default
  .panel-body
    %h4.alert.alert-success
      = link_to I18n.t('home.statistics.book_count', count: @statistics[:books]) , { controller: "books", action: "index" }
    %h4.alert.alert-warning
      = link_to I18n.t('home.statistics.author_count', count: @statistics[:authors] ), { controller: "browse", action: "index", type: "authors" }
    %h4.alert.alert-info
      = link_to I18n.t('home.statistics.species', count: @statistics[:names]),  { controller: "names", action: "index" }

    