= javascript_include_tag "reset_password"

.form
  = form_for :user, url: reset_password_action_users_path, builder: FormHelper::BHLFormBuilder, html: { onsubmit: "return check_reset_password_paramters();" } do |f|
    = f.hidden_field :guid, value: params[:guid]
    = f.hidden_field :activation_code, value: params[:activation_code]
    = validation_errors_for(@user)
    %ul
      %li
        = f.label :password, I18n.t('activerecord.attributes.user.entered_password'), class: 'required'
      %li
        .invisible_error_msg#password_error
          = "#{I18n.t('msgs.empty_password_error')}"
        = f.password_field :entered_password, {maxlength: 16, id: "entered_password"}
      %li
        = f.label :confirm_password, I18n.t('activerecord.attributes.user.entered_password_confirmation'), class: 'required'
      %li
        .invisible_error_msg#password_confirmation_error
          = "#{I18n.t('msgs.empty_password_confirmation_error')}"
        = f.password_field :entered_password_confirmation, { maxlength: 32, id: "entered_password_confirmation"}
    %fieldset
      = f.submit I18n.t('header.pages.change_password'), class: "btn"
      = f.submit I18n.t('common.clear'), class: "btn", type: "reset"