.col-md-8  
  %table{ width: "100%", border: "0", style: "border-collapse:collapse", cellspacing: "0", cellpadding: "3" }
    %tr
      %td
        %select{ name: 'hierarchy_id', style: "width: 100%", class: "hierarchy_id" }          
          - @entries.each do |entry|
            %option{ value: entry.id, selected: entry.id==DEFAULT_HIERARCHY_ID }= entry.label
    %tr
      %td
        #h_container{ style: "height: 250px; width: 100%; overflow: auto", class: "tree" }
          
.col-md-4.sidebar-offcanvas.pull-right
  #namedetail
    .spacing-left.panel.panel-styled
      .panel-heading
        %h3.panel-title
          = I18n.t('common.select_species_for_details')
      .panel-body