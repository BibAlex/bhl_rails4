%ul.fa-ul.tools
  %li
    %i.fa.fa-li.fa-book
    %small
      = link_to I18n.t('common.sidelinks.read'), { controller: 'books', id: id, tab: 'read' }
  %li
    %i.fa.fa-li.fa-info
    %small
      = link_to I18n.t('common.sidelinks.detail'), { controller: 'books', id: id }

  
  - if is_logged_in?
    %li
      %i.fa.fa-li.fa-plus-square
      %small        
        %a{ href: "#", "data-target" => "#approvalModal", "data-toggle" => "modal" }
          = I18n.t('common.sidelinks.add_collection')
        = render partial: "books/add_book_to_collection"
.rate
  - if rate
    .starsidelink_gray{ id: "starsidelink_#{id}", data: "#{rate}" }
  %span.text-muted.pull-right
    %small          
      = I18n.t('common.sidelinks.views', count: views)
%div