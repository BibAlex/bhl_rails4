= javascript_include_tag 'book_collection.js'
%ul.fa-ul.tools
  %li
    %i.fa.fa-li.fa-book
    %small
      = link_to I18n.t('common.read'), { controller: 'books', id: id, tab: 'read' }
  %li
    %i.fa.fa-li.fa-info
    %small
      = link_to I18n.t('common.details'), book_path(id: id)

  
  - if is_logged_in?
    %li
      %i.fa.fa-li.fa-plus-square
      %small
        %a{ onclick: "load_collections(#{id})", style: "cursor:pointer;" }
          = I18n.t('common.add_collection')
      .modal.fade{ "aria-hidden" => "true", "aria-labelledby" => "approvalModalLabel", "role" => "dialog", "tabindex" => "-1", id: "collection_modal_#{id}" }
.rate
  - if rate
    .starsidelink_gray{ id: "starsidelink_#{id}", data: "#{rate}" }
  %span.text-muted.pull-right
    %small          
      = I18n.t('common.views', count: views)
%div