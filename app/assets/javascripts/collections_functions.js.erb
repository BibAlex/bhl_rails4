    if (field == ''){
      alert("<%=I18n.t('warn.empty_search_query_warn')%>");
      return;
    }
    if ([' ',  '!', '@', '#', '$' , '^', '&', '*', '(',  ',',  ')', '_',  '+', '-', '=' , '&'].indexOf(field) >= 0 || field.indexOf("%") >= 0) {
