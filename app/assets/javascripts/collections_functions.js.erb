function confirmDelete_photo(id){
    var r= confirm("<%= I18n.t('collection.delete_collection_photo_confirm') %>");
    if (r)
      get_or_delete_photo(id, 1);
    else{
      $('#delete_photo').removeAttr('checked');
      return false;
      }
  }
  
